@model Movie

@{
    ViewData["Title"] = "Details";
}
<div class="det container">
    <h1 class="det-head">@Model.Title Details</h1>

    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img src=@($"data:image/*;base64,{Convert.ToBase64String(Model.Poster)}") class="img-fluid rounded-start" alt="Poster">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <div>
                        <h5 class="card-title">@Model.Title (@Model.Year)</h5>
                        <span class="det-genre">@Model.Genre.Name</span>
                        <p class="card-text">@Model.Storyline</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p class="card-text mb-0 mt-3">
                            <small class="text-muted"><i class="Bi bi-star-fill text-warning"></i> @Model.Rate.ToString("0.0")</small>
                        </p>
                        <div class=" gap-1">
                            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-outline-success">
                                <i class="Bi bi-pencil"></i> Edit
                            </a>

                            <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger">
                                <i class="Bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>